mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                .videoPlayer__column__subclass
                    span#jsVolumeButton
                        i.fas.fa-volume-up
                    input.videoPlayer__volume#jsVolume(type="range", min="0",max="1", step="0.1", value="0.7")
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                div.jsPlayerBoxOutside
                    div.jsPlayerBoxInside
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand